    plugins='lists link table image'
    toolbar='formatselect | undo redo | link | bold italic backcolor  | alignleft aligncenter alignright alignjustify | numlist bullist outdent indent | table image | removeformat'
    menubar=false
    min_height=200
    heigth=300)
